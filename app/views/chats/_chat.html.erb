<section class= "flex flex-col gap-2 mt-10 items-center justify-center" id="chat_show_<%= "#{chat.id}" %>">
   <div class= "flex flex-col">
    <h3 class= "font-bold text-3x1 text-white"><%= chat.name %> - Chat </h3>
  <span class= "text-white font-semibold">Users in this chat: </span>
</div>

<section class= "flex gap-5">
  <div class="py-2 px-10 flex flex-col gap-1 items-center border-sky-600 border rounded-1g my-2 shadow-1g w-96">
   <H3 class="text-white font-semibold text-center">Users in this chat</H3>

<% User.all.each do |user| %>
  <% next unless chat.users.include?(user) %>
   <div class="rounded underline text-white my-1 font-semibold text-sm">
     <%= user.email %>
    </div>
   <% end %>
</div>

<div class="py-2 px-10 flex flex-col gap-1 items-center border-sky-600 border rounded-1g my-2 shadow-1g w-96">
 <H3 class="text-white font-semibold text-center">Add users</H3>

<% User.all.each do |user| %>
  <% next if chat.users.include?(user) %>
    <%= button_to add_user_path, params: {user_id: user, chat_id: chat}, id: "add_user_#{user.id}", method: :post do %>
      <div class="rounded underline text-white my-1 font-semibold text-sm">
     <%= user.email %>
      </div>
     <% end %>
   <% end %>
    </div>
  </section>
</section>